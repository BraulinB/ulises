    <!-- Terms Modal -->
    <div id="terms-modal" class="fixed inset-0 modal-backdrop items-center justify-center p-4 hidden">
        <div class="bg-gray-800 rounded-lg shadow-2xl w-full max-w-lg m-auto text-white border-2 border-yellow-500/50">
            <div class="p-6 border-b border-gray-700 flex justify-between items-center">
                <h3 class="text-xl font-bold">Términos y condiciones</h3>
                <button onclick="toggleModal('terms-modal', false)" class="text-gray-400 hover:text-white">&times;</button>
            </div>
            <div class="p-6 max-h-[60vh] overflow-y-auto">
                <ol class="list-decimal list-inside space-y-4 text-gray-300">
