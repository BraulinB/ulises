    <script>
        // --- CONFIGURATION ---
        const TICKET_PRICE = 60.00;
        
        // --- DOM ELEMENTS ---
        const quantityInput = document.getElementById('quantity-input');
        const totalPriceDisplay = document.getElementById('total-price-display');
        const participateBtn = document.getElementById('participate-btn');
        const openTermsBtn = document.getElementById('open-terms-btn');
        
        // Modals
        const confirmModal = document.getElementById('confirm-modal');
        const dataModal = document.getElementById('data-modal');
        const termsModal = document.getElementById('terms-modal');

        // Modal Buttons
        const continueToDataBtn = document.getElementById('continue-to-data-btn');
        const backToConfirmBtn = document.getElementById('back-to-confirm-btn');

        // --- STATE ---
        let quantity = 1;

        // --- FUNCTIONS ---

        /**
         * Updates the total price display on the main page.
         */
        function updateDisplay() {
            const total = (quantity * TICKET_PRICE).toFixed(2);
            quantityInput.value = quantity;
            totalPriceDisplay.textContent = `Bs ${total}`;
        }

        /**
         * Sets the quantity of tickets directly.
         * @param {number} amount - The number of tickets.
         */
        function setQuantity(amount) {
            quantity = amount > 0 ? amount : 1;
            updateDisplay();
        }

        /**
         * Changes the quantity by a given amount (e.g., +1 or -1).
         * @param {number} change - The amount to change the quantity by.
         */
        function changeQuantity(change) {
            const newQuantity = quantity + change;
            quantity = newQuantity > 0 ? newQuantity : 1;
            updateDisplay();
        }
        
        /**
         * Toggles the visibility of a modal.
         * @param {string} modalId - The ID of the modal to toggle.
         * @param {boolean} show - True to show, false to hide.
         */
        function toggleModal(modalId, show) {
            const modal = document.getElementById(modalId);
            if (modal) {
                if (show) {
                    modal.classList.remove('hidden');
                    modal.classList.add('flex');
                } else {
                    modal.classList.add('hidden');
                    modal.classList.remove('flex');
                }
            }
        }
        
        /**
         * Updates the content of the confirmation modal.
         */
        function updateConfirmModal() {
            const total = (quantity * TICKET_PRICE).toFixed(2);
            document.getElementById('modal-confirm-price').textContent = `Bs ${TICKET_PRICE.toFixed(2)}`;
            document.getElementById('modal-confirm-quantity').textContent = quantity;
            document.getElementById('modal-confirm-total').textContent = `Bs ${total}`;
        }

        function openTermsFromConfirm() {
            toggleModal('confirm-modal', false);
            toggleModal('terms-modal', true);
        }

        // --- EVENT LISTENERS ---

        // Listen for changes in the manual input field.
        quantityInput.addEventListener('input', (e) => {
            let value = parseInt(e.target.value, 10);
            if (isNaN(value) || value < 1) {
                value = 1;
            }
            quantity = value;
            updateDisplay();
        });
        
        // Main "Participar" button opens the first modal.
        participateBtn.addEventListener('click', () => {
            updateConfirmModal();
            toggleModal('confirm-modal', true);
        });

        // "Continuar" button in confirm modal opens the data modal.
        continueToDataBtn.addEventListener('click', () => {
            toggleModal('confirm-modal', false);
            toggleModal('data-modal', true);
        });

        // "Volver" button in data modal goes back to the confirm modal.
        backToConfirmBtn.addEventListener('click', () => {
            toggleModal('data-modal', false);
            toggleModal('confirm-modal', true);
        });

        // Footer "Términos de uso" button opens the terms modal.
        openTermsBtn.addEventListener('click', () => {
            toggleModal('terms-modal', true);
        });

        // --- INITIALIZATION ---
        // Set the initial state when the page loads.
        document.addEventListener('DOMContentLoaded', () => {
            updateDisplay();
            document.getElementById('ticket-price-display').textContent = `Bs ${TICKET_PRICE.toFixed(2)}`;
        });

    </script>
</body>
